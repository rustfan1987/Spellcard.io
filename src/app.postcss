@tailwind components;
@import url('https://fonts.googleapis.com/css2?family=Bruno+Ace&display=swap');
@tailwind base;
@tailwind utilities;

html,
body {
	@apply h-full;
}

@layer components {
	.container {
		@apply mx-auto max-w-4xl p-6 lg:p-0;
	}

	.muted {
		@apply text-gray-600 underline-offset-4 transition-all hover:underline dark:text-gray-300 dark:hover:text-primary-500;
	}
}

